<Border x:Class="MyRectangle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="100"
        Width="100"
        Background="LightBlue"
        MouseLeftButtonDown="RectMouseLeftButtonDown"
        MouseLeftButtonUp="RectMouseLeftButtonUp"
        BorderBrush="Red">
    <Border.ContextMenu>
        <ContextMenu>
            <MenuItem Header="10 градусов-&gt;" Click="Right10Click"/>
            <MenuItem Header="30 градусов-&gt;" Click="Right30Click"/>
            <MenuItem Header="60 градусов-&gt;" Click="Right60Click"/>
            <MenuItem Header="&lt;-10 градусов" Click="Left10Click"/>
            <MenuItem Header="&lt;-30 градусов" Click="Left30Click"/>
            <MenuItem Header="&lt;-60 градусов" Click="Left60Click"/>
            <MenuItem Header="Удалить" Click="DeleteClick"/>
        </ContextMenu>
    </Border.ContextMenu>
</Border>
